<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/head_icon_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@mipmap/ico_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="当前位置"
            android:textColor="@color/color_app_divide_dark"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/head_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/head_icon_root"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="未知"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_app_divide_dark" />

</RelativeLayout>