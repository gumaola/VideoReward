<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".webview.AgentWebActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_app_background"
        android:titleTextColor="@color/color_app_text_primary"
        app:theme="@style/toolBar"
        app:titleTextColor="@color/color_app_text_primary">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_app_text_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/toolbar_extra_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_app_text_primary"
            android:textSize="16sp"
            android:visibility="gone" />
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>
