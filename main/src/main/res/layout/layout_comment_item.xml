<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/comment_item_avatar"
        android:layout_width="35dp"
        android:scaleType="centerCrop"
        android:layout_height="35dp"
        android:background="@mipmap/icon_avatar_placeholder"
        app:riv_corner_radius="18dp" />

    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/comment_item_avatar"
        android:textColor="@color/color_app_text_subtitle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/comment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/comment_item_avatar"
        android:textColor="@color/color_app_divide_dark"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/comment_item_time"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_app_divide_dark" />
</RelativeLayout>