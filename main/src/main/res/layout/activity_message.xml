<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dark">

    <ImageView
        android:id="@+id/message_list_back"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:onClick="goback"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@mipmap/ico_back_gray" />

    <TextView
        android:id="@+id/message_list_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/home_message"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:id="@+id/message_list_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/message_list_title"
        android:layout_marginTop="15dp"
        android:background="@color/color_app_divide_dark" />

</RelativeLayout>