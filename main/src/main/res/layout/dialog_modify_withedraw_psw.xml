<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_level_bg"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_billing_psw"
        android:textColor="@color/color_app_divide_dark"
        android:textSize="13sp" />

    <cn.nano.common.widget.VerificationCodeEditText
        android:id="@+id/withdraw_modify_input_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:password="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/set_billing_psw"
        android:textColor="@color/color_app_divide_dark"
        android:textSize="13sp" />

    <cn.nano.common.widget.VerificationCodeEditText
        android:id="@+id/withdraw_confirm_input_psw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:password="true" />

    <TextView
        android:id="@+id/withdraw_modify_yes"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_button_color"
        android:gravity="center"
        android:text="@string/yes"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>